<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginHorizontal="@dimen/_16dp"
    tools:context=".ui.authorization.LoginFragment">

    <TextView
        android:id="@+id/login_text_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/grotesk_bold"
        android:text="@string/app_text_sign_in"
        android:textAlignment="center"
        android:textColor="@color/mr_color_black"
        android:textSize="@dimen/_16sp"
        app:layout_constraintBottom_toTopOf="@+id/login_text_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/login_text_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:fontFamily="@font/grotesk_bold"
        android:text="@string/app_text_welcome"
        android:textAlignment="center"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_text_sign_in" />

    <TextView
        android:id="@+id/login_text_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_48dp"
        android:fontFamily="@font/grotesk_regular"
        android:text="@string/app_email"
        android:textColor="@color/mr_color_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_text_welcome" />

    <EditText
        android:id="@+id/login_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:background="@drawable/bg_edit"
        android:hint="@string/app_email_example"
        android:inputType="textEmailAddress"
        android:padding="@dimen/_16dp"
        android:textSize="@dimen/_14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_text_email" />

    <TextView
        android:id="@+id/login_text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:fontFamily="@font/grotesk_regular"
        android:text="@string/app_password"
        android:textColor="@color/mr_color_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_edit_email" />

    <RelativeLayout
        android:id="@+id/relative_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_text_password">

        <EditText
            android:id="@+id/login_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit"
            android:hint="@string/app_password_example"
            android:inputType="textPassword"
            android:padding="@dimen/_16dp"
            android:textSize="@dimen/_14sp" />

        <ImageView
            android:id="@+id/login_image_password"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:importantForAccessibility="no"
            android:adjustViewBounds="true"
            tools:srcCompat="@drawable/ic_password_invisible"
            app:tint="@color/mr_color_black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/login_btn_recover_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        android:fontFamily="@font/grotesk_regular"
        android:text="@string/app_recover_account"
        android:textColor="@color/mr_color_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative_password" />

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32dp"
        android:background="@drawable/bg_horizontal_button"
        android:fontFamily="@font/grotesk_regular"
        android:text="@string/app_login"
        android:textAllCaps="false"
        android:textColor="@color/mr_color_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_btn_recover_account" />

    <LinearLayout
        android:id="@+id/linear_login_alternative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btn_login">

        <View
            android:layout_width="@dimen/match_constraints"
            android:layout_height="@dimen/_1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_weight="1"
            android:alpha="0.1"
            android:background="@color/mr_color_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/grotesk_regular"
            android:text="@string/app_login_alternative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_btn_login" />

        <View
            android:layout_width="@dimen/match_constraints"
            android:layout_height="@dimen/_1dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_weight="1"
            android:alpha="0.1"
            android:background="@color/mr_color_black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_options_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_login_alternative">

        <ImageView
            android:id="@+id/image_btn_login_google"
            android:layout_width="@dimen/_56dp"
            android:layout_height="@dimen/_56dp"
            android:layout_marginEnd="@dimen/_16dp"
            android:background="@drawable/bg_circle_button"
            android:importantForAccessibility="no"
            android:padding="@dimen/_16dp"
            android:src="@drawable/logo_google" />

        <ImageView
            android:id="@+id/image_btn_login_facebook"
            android:layout_width="@dimen/_56dp"
            android:layout_height="@dimen/_56dp"
            android:background="@drawable/bg_circle_button"
            android:importantForAccessibility="no"
            android:padding="@dimen/_16dp"
            android:src="@drawable/logo_facebook" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_32dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_options_login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8dp"
            android:fontFamily="@font/grotesk_regular"
            android:text="@string/app_no_account"
            android:textColor="@color/mr_color_black" />

        <TextView
            android:id="@+id/login_btn_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/grotesk_bold"
            android:text="@string/app_create_account"
            android:textColor="@color/mr_color_black" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>